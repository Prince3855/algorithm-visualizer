<%- include("./partials/header.ejs"); %>

    <!-- Controls -->
    <div class="container-fluid text-white" style="background-color: #34495e; height: 100px; margin: 5px 0px;">

        <div class="d-grid gap-2">
            <h5 class="text-center" style="margin: 10px 0;">
                <%= title %>
            </h5>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-2 mx-1">
                <label for="speed" class="form-label">Speed</label>
                <input type="range" class="form-range" min="0" max="5" step="1" value="4" id="speed">
            </div>
            <div class="col-2 mx-1">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-light" type="button" id="reset">Reset</button>
                </div>
            </div>
            <div class="col-2 mx-1">
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-light" type="button" id="createMaze" value="<%= title %>">Create
                        Maze</button>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/p5@1.4.0/lib/p5.js"></script>
    <script src="/javascripts/maze-generation/control.js"></script>

    <!-- Add Create Maze algorithms script -->
    <% if(title==='Create Maze - DFS' ){ %>
        <script src="/javascripts/maze-generation/dfs-maze.js"></script>
    <% } %>
    
<%- include("./partials/footer.ejs"); %>